            font-size: 1rem;
        }
    </style>
</head>
<body>

<div class="container">
    <h1>GDPR Data Request Utility</h1>
    <form id="gdpr-form">
        <label for="search_type">Search Type:</label>
        <select name="search_type" id="search_type" required>
            <option value="name">Name</option>
            <option value="email">Email</option>
            <option value="phone">Phone</option>
            <!-- Add other search types as needed -->
        </select>

        <label for="search_value">Search Value:</label>
        <input type="text" id="search_value" name="search_value" required />

        <label for="request_type">Request Type:</label>
        <select name="request_type" id="request_type" required>
            <option value="GDPR_EXPORT">GDPR Export</option>
            <option value="GDPR_DELETE">GDPR Delete</option>
            <option value="GDPR_UPDATE">GDPR Update</option>
        </select>

        <button type="submit">Submit GDPR Request</button>
    </form>

    <div id="response"></div>
</div>

<script>
    document.getElementById('gdpr-form').addEventListener('submit', function(event) {
        event.preventDefault();

        const formData = new FormData(this);
        
        fetch('/create-request', {
            method: 'POST',
            body: formData
        })
        .then(response => response.json())
        .then(data => {
            const responseDiv = document.getElementById('response');
            if (data.status === 'success') {
                responseDiv.innerHTML = `<p>Request Successful: ${JSON.stringify(data.response)}</p>`;
            } else {
                responseDiv.innerHTML = `<p>Error: ${data.error}</p>`;
            }
        });
    });
</script>

</body>
</html>
